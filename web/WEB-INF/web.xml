<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AllUsers</servlet-name>
        <servlet-class>servlets.AllUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DuelystationServlet</servlet-name>
        <servlet-class>servlets.DuelystationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginUser</servlet-name>
        <servlet-class>servlets.LoginUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewUser</servlet-name>
        <servlet-class>servlets.NewUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllDecks</servlet-name>
        <servlet-class>servlets.AllDecks</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LyonarCards</servlet-name>
        <servlet-class>servlets.LyonarCards</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllCards</servlet-name>
        <servlet-class>servlets.AllCards</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewCardDeck</servlet-name>
        <servlet-class>servlets.NewCardDeck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSesion</servlet-name>
        <servlet-class>servlets.CerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BorrarCarta</servlet-name>
        <servlet-class>servlets.BorrarCarta</servlet-class>
    </servlet>
    
    
    <servlet-mapping>
        <servlet-name>AllUsers</servlet-name>
        <url-pattern>/AllUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DuelystationServlet</servlet-name>
        <url-pattern>/DuelystationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginUser</servlet-name>
        <url-pattern>/LoginUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewUser</servlet-name>
        <url-pattern>/NewUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllDecks</servlet-name>
        <url-pattern>/AllDecks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LyonarCards</servlet-name>
        <url-pattern>/LyonarCards</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllCards</servlet-name>
        <url-pattern>/AllCards</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewCardDeck</servlet-name>
        <url-pattern>/NewCardDeck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSesion</servlet-name>
        <url-pattern>/CerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BorrarCarta</servlet-name>
        <url-pattern>/BorrarCarta</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
